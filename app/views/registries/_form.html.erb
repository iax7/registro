<%= form_with(model: registry, id: 'registryForm', data: { turbo_frame: "edit_registry" }) do |form| %>

  <div class="row mb-3">
    <%= form.label :comments, class: 'col-sm-2 col-form-label text-sm-end' %>
    <div class="col-sm-10">
      <%= form.text_area :comments, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :amount_offering, class: 'col-sm-2 col-form-label text-sm-end' %>
    <div class="col-sm-10 my-1">
      <%= form.number_field :amount_offering, placeholder: 'Opcional', class: 'form-control col-4', aria: {:describedby => "OfferingHelp"}, disabled: @registry.paid? %>
      <small id="OfferingHelp" class="form-text text-muted">
        Enteramente opcional. La ofrenda servir√° para cubrir costos extras derivados del evento.
      </small>
    </div>
  </div>


  <%# ------- Submit Buttons Section ---------------------- %>
  <hr>
  <div class="row mb-3">
    <%= label_tag '', nil, class: 'col-sm-2 col-form-label text-sm-end' %>
    <div id="actions" class="col-sm-6">
      <%= form.submit 'Aceptar', data: {disable_with: t('common.waiting')}, class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', start_path, {class: 'btn btn-outline-secondary', data: { turbo_frame: "edit_registry" }} %>
    </div>
    <%= image_tag image_path('spinners/spinner.gif'), id: 'spinner', style: 'display:none', alt: 'Waiting...' %>
  </div>
<% end %>
